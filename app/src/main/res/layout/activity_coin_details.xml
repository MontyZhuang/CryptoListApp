<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@color/black"
        app:layout_constraintHeight_percent="0.1">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
        android:id="@+id/priceBox"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintWidth_percent="0.49"
        android:gravity="center"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"/>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/priceContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/pricebtcBox"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.125"
            app:layout_constraintWidth_percent="0.49"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/pricebtcLabel"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price (BTC)"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/pricebtcContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/marketcapBox"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.125"
            app:layout_constraintWidth_percent="0.49"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintTop_toBottomOf="@id/priceBox"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/marketcapLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Marketcap"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/marketcapContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/volumeBox"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.125"
            app:layout_constraintWidth_percent="0.49"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintTop_toBottomOf="@id/pricebtcBox"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/volumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Volume"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/volumeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>