<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    app:layout_constraintWidth_percent="0.4"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/portfolioCoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Coin Name"
        />

    <ImageView
        android:id="@+id/portfolioCoinImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/portfolioTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/middleGuideline"
        android:text="Total Value"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/portfolioTotalProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinImage"
        app:layout_constraintLeft_toRightOf="@id/middleGuideline"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Total Profit"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/portfolioTotalValuev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/portfolioTotalValue"
        app:layout_constraintRight_toLeftOf="@id/middleGuideline"
        android:text="value value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"

        />

    <TextView
        android:id="@+id/portfolioTotalProfitv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/portfolioTotalProfit"
        android:text="profit value"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/middleGuideline"

        />

    <android.support.constraint.Guideline
        android:id="@+id/middleGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>



</android.support.constraint.ConstraintLayout>